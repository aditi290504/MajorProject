<% layout("/layouts/boilerplate") %>
<body>
<div class="row mt-3">
    <div class="col col-8 offset-2">
      <h3>SignUp on wonderLust</h3>
      <form action="/signup" method="POST"  novalidate class="needs-validation">
        <div class="mb-3">
          <label for="username" class="form-label">username</label>
          <input
            type="text"
            name="username"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">please enter short Description</div>
          </div>
  
      </form>
    </div>
</div>
</body>